<Window x:Class="MemoryGameWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memory Game" Height="650" Width="600"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="CardButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">

            <TextBlock Text="Poziom:" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14"/>

            <ComboBox x:Name="DifficultyComboBox" 
                      Width="120" 
                      VerticalAlignment="Center" 
                      Margin="0,0,20,0"
                      SelectionChanged="DifficultyComboBox_SelectionChanged">
                <ComboBoxItem Content="Łatwy (4x4)" Tag="4" IsSelected="True"/>
                <ComboBoxItem Content="Średni (6x6)" Tag="6"/>
                <ComboBoxItem Content="Trudny (8x8)" Tag="8"/>
            </ComboBox>

            <TextBlock x:Name="txtMoves" Text="Ruchy: 0" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>

            <Button Content="Restart" Click="BtnRestart_Click" Padding="10,5" FontSize="14"/>
        </StackPanel>

        <UniformGrid x:Name="GameGrid" Grid.Row="1" Margin="10">
        </UniformGrid>
    </Grid>
</Window>